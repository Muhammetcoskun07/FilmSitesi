@model List<FilmModel>

<div class="container mt-4">
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th scope="col" width="20%">Id</th>
                <th scope="col" width="20%">Kategori</th>
                <th scope="col" width="20%">Film Adı</th>
                <th scope="col" width="20%">Yönetmen</th>
                <th scope="col" width="20%">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var menu in Model)
            {
                <tr>
                    <td>@menu.Id</td>
                    <td>@menu.Kategori</td>
                    <td>@menu.FilmAdi</td>
                    <td>@menu.Yonetmen</td>
                    <td>
                        <a href="/admin/duzenle/@menu.Id" class="btn btn-danger btn-sm">Düzenle</a>
                        <a href="/admin/sil/@menu.Id" onclick="return confirm('Emin misin?')" class="btn btn-outline-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        background-color: #141414;
        color: white;
        font-family: Arial, sans-serif;
    }

    .table {
        color: white;
    }

        .table thead th {
            border-bottom: 2px solid #e50914;
        }

    .table-hover tbody tr:hover {
        background-color: #333;
    }

    .btn-danger {
        background-color: #e50914;
        border: none;
    }

        .btn-danger:hover {
            background-color: #f40612;
        }

    .btn-outline-danger {
        border-color: #e50914;
        color: #e50914;
    }

        .btn-outline-danger:hover {
            background-color: #f40612;
            color: white;
        }
</style>
