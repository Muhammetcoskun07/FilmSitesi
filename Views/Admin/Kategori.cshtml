@model List<FilmModel>

<div class="container mt-4">
    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th scope="col" width="20%">Kategori Id</th>
                <th scope="col" width="20%">Kategori</th>
                <th scope="col" width="20%">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Kategori</td>
                    <td>
                        <a href="/Admin/KategoriEkle" class="btn btn-primary btn-sm">Ekle</a>
                        <a href="/admin/KategoriDuzenle/@category.Id" class="btn btn-danger btn-sm">Düzenle</a>
                        <a href="/admin/KategoriSil/@category.Id" onclick="return confirm('Emin misin?')" class="btn btn-outline-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        background-color: #141414;
        color: white;
        font-family: Arial, sans-serif;
    }

    .table {
        color: white;
    }

        .table thead th {
            border-bottom: 2px solid #e50914;
        }

    .table-hover tbody tr:hover {
        background-color: #333;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-danger {
        background-color: #e50914;
        border: none;
    }

        .btn-danger:hover {
            background-color: #f40612;
        }

    .btn-outline-danger {
        border-color: #e50914;
        color: #e50914;
    }

        .btn-outline-danger:hover {
            background-color: #f40612;
            color: white;
        }
</style>
