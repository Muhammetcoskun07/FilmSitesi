@model List<FilmModel>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #141414;
            color: white;
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        .film-card {
            background-color: #333;
            border: none;
            margin-bottom: 20px;
        }

            .film-card img {
                width: 100%;
                height: auto;
            }

            .film-card .card-body {
                padding: 15px;
            }

            .film-card .card-title {
                font-size: 1.2rem;
                font-weight: bold;
                margin-bottom: 10px;
            }

            .film-card .card-text {
                font-size: 0.9rem;
                margin-bottom: 10px;
            }

        .btn-netflix {
            background-color: #e50914;
            border: none;
            color: white;
            padding: 8px 20px;
            font-size: 0.9rem;
        }

            .btn-netflix:hover {
                background-color: #f40612;
            }
    </style>
</head>
<body>

    <div class="container">
        <h2 class="mb-4">@ViewData["Title"]</h2>
        <div class="row">
            @foreach (var film in Model)
            {
                <div class="col-md-3">
                    <div class="card film-card">
                        <img src="/uploads/@film.ImgUrl" class="card-img-top" alt="@film.FilmAdi">
                        <div class="card-body">
                            <h5 class="card-title">@film.FilmAdi</h5>
                            <p class="card-text">@film.Detay</p>
                            <a href="/Home/Detay/@film.Id" class="btn btn-netflix">Detaylar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
